<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FrameLayout">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/imageReanudar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"

        android:background="@drawable/baseline_play_circle_filled_24"
        />
    <ImageButton
        android:id="@+id/imagePausa"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_pause_circle_24"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/imageRetroceder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/baseline_arrow_back_24"
        />


</FrameLayout>